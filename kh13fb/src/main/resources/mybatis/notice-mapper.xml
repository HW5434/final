<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="notice">

	<!-- 	시퀀스등록 -->
	<select id="sequence" resultType="int">
		select notice_seq.nextval from dual
	</select>

	<!-- 	목록 -->
	<select id="list" resultType="NoticeDto">
		select * from notice order by notice_no asc
	</select>

	<!-- 	검색 -->
	<select id="find" resultType="NoticeDto">
		select * from notice where notice_no = #{noticeNo}
	</select>
	
	<!-- 	등록 -->
	<insert id="save">
		insert into notice
			(notice_no, notice_title, notice_content, notice_wdate, notice_view)
		values
			(#{noticeNo}, #{noticeTitle}, #{noticeContent}, #{noticeWdate}, #{noticeView})
	</insert>
	
	<!-- 	수정 -->
	
	<!-- 	삭제 -->
	<delete id="delete">
		delete notice where notice_no = #{noticeNo}
	</delete>

</mapper>